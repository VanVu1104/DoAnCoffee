@model IEnumerable<Manage_Coffee.Models.Phieudhonl>

<h2>Lịch sử đơn hàng</h2>

<table>
    <thead>
        <tr>
            <th>Mã Phiếu Đơn Lẻ</th>
            <th>Ngày Giờ Đặt</th>
            <th>Tổng Tiền</th>
            <th>Địa Chỉ</th>
            <th>Trạng Thái</th>
            <th>Phương Thức Thanh Toán</th>
            <th>Tiền Ship</th>
            <th>Chi Tiết</th> <!-- Cột chi tiết -->
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.MaPhieuonl</td>
                <td>@order.Ngaygiodat.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.TongTien?.ToString("N0")</td>
                <td>@order.DiaChi</td>
                <td>
                    @if (@order.TrangThai == true)
                    {
                        <p>Hoàn thành</p>
                    }
                    else if (@order.TrangThai == false)
                    {
                        <p>Chờ xác nhận </p>
                    }
                    else
                    {
                        <p>Đã hủy đơn</p>
                    }
                </td>
                <td>@order.Pttt</td>
                <td>@order.TienShip?.ToString("N0")</td>
                <td>
                    <a href="@Url.Action("Detail", "OrderHistory", new { maPhieuonl = order.MaPhieuonl })">Xem Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
