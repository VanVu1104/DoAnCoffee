@model Manage_Coffee.Models.SanPham

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<h2>Thêm sản phẩm</h2>

<form asp-action="Create1" method="post">
    <div class="form-group">
        <label for="MaSp">Mã sản phẩm</label>
        <input asp-for="MaSp" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Ten">Tên sản phẩm</label>
        <input asp-for="Ten" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Dongia">Đơn giá</label>
        <input asp-for="Dongia" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Dvt">Đơn vị tính</label>
        <input asp-for="Dvt" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Mota">Mô tả</label>
        <textarea asp-for="Mota" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="TrangThai">Trạng thái</label>
        <input asp-for="TrangThai" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
