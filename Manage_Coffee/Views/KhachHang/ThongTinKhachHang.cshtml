@model Manage_Coffee.Models.KhachHang

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Thông tin khách hàng</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Tên:</div>
                <div class="col-md-8">@Model.Ten</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Địa chỉ:</div>
                <div class="col-md-8">@Model.Diachi</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Số điện thoại:</div>
                <div class="col-md-8">@Model.Sdt</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Giới tính:</div>
                <div class="col-md-8">
                    @(Model.GioiTinh.HasValue ? (Model.GioiTinh == true ? "Nam" : "Nữ") : "")
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a href="/" class="btn btn-secondary">Quay lại</a>
            <a href="@Url.Action("ChinhSuaThongTin", "KhachHang", new { id = Model.MaKh })" class="btn btn-primary">Cập nhật thông tin</a>
        </div>
    </div>
</div>
<style>
    .card-header {
        background-color: #007bff;
    }

    .font-weight-bold {
        font-weight: 600;
    }
</style>


